<%- include('partials/_header') -%>

    <div class="container">
        <div class="row">
            <!-- FROM -->
            <div class="col-md-5">
                <div class="card">
                    <div class="card-body">
                        <form action="/add" method="POST">
                            <div class="form-group">
                                <input type="text" name="title" placeholder="Insert a title" class="form-control">
                            </div>
                            <div class="form-group">
                                <textarea name="description" cols="80" class="form-control" placeholder="Insert a description"></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary btn-block">
                                Add
                            </button>
                        </form>
                    </div>
                </div>
            </div>
            <!-- LIST -->
            <div class="col-md-7">
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Title</th>
                            <th>Description</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(let i = 0; i < Tasks.length; i++){ %>
                            <tr>
                                <td><%= i +1 %></td>
                                <td><strong><%= Tasks[i].title %></strong></td>
                                <td><%= Tasks[i].description %></td>
                                <td>
                                    <a href="/turn/<%= Tasks[i]._id %>" class="btn <% if(Tasks[i].status){%> <%= 'btn-success' %> <%} else{ %> <%= 'btn-dark' %> <%}%>">Done</a>
                                    <a href="/edit/<%= Tasks[i]._id %>" class="btn btn-info">Edit</a>
                                    <a href="/delete/<%= Tasks[i]._id %>" class="btn btn-danger">Delete</a>
                                </td>
                            </tr>
                        <% } %>
                    </tbody>

                </table>
            </div>
        </div>
    </div>

<%- include('partials/_footer') -%>